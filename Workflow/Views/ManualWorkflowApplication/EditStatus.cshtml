@model Application

@{
    ViewData["Title"] = "Edit Application Status";
}

<h2>Change Application Status</h2>

<form asp-action="EditStatus" asp-controller="ManualWorkflowApplication" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Current Status:</label>
        <input type="text" class="form-control" value="@Model.Status.Name" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">New Status:</label>
        <select name="newStatusId" class="form-select">
            @foreach (var status in ViewBag.ValidStatuses)
            {
                <option value="@status.Id">@status.Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Remarks:</label>
        <textarea name="remarks" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Update Status</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
